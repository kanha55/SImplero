<div class="text-center mt-28 ">
  <h2 class="text-2xl font-mono">Login</h2><br>
  <div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email" %><br>
    </div>

    <div class="field mt-10">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %><br>
    </div>

    <div class="actions mt-10">
      <%= f.submit "Log in", class: "bg-[#82c91e] hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-5" %>
    </div>
  <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
